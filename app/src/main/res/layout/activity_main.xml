<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blac">

    <TextView
        android:id="@+id/yourName"
        android:layout_width="149dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="318dp"
        android:text="nikhil ravuri"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="191dp"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="189dp"
        android:text="converter"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/metersInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter meters"
        android:textSize="50dp"/>


    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/metersInput"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="581dp"
        android:text="Convert" />

    <TextView
        android:id="@+id/millimetersOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertButton"
        android:layout_marginTop="16dp"
        android:textSize="10dp"/>

</RelativeLayout>
